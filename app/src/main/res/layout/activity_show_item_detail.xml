<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitise.ShowItemDetailActivity">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/crousalview_id"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shape_crousel">

    </com.synnapps.carouselview.CarouselView>
    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/crousalview_id"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#F4F7FF"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crousalview_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/id_name"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_boldnew"
                android:layout_height="wrap_content"
                android:text="name of item">
            </TextView>
            <TextView
                android:id="@+id/id_des"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Description of items is Har">

            </TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_location"
                    android:layout_height="wrap_content"
                    app:tint="#0597F2">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/btnphone"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:paddingRight="10dp"
                    android:fontFamily="@font/montserrat_subrayada_bold"
                    android:paddingLeft="10dp"
                    android:layout_height="50dp"
                    android:text="Location">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_profilebg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_image_id"
                    android:layout_width="100dp"
                    android:background="@drawable/shape_profile"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_baseline_boy_24">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:id="@+id/show_profiletxt_user"
                    android:text="Show Profile">

                </TextView>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/shape_whatspp_btn"
                android:orientation="horizontal"
                android:id="@+id/whatapp_btn"
                android:layout_weight="1.2"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_call_24"
                    android:tint="@color/white"
                    android:layout_height="wrap_content">

                </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/btnphone"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_subrayada_bold"
                android:paddingLeft="5dp"
                android:layout_height="50dp"
                android:text="Whats app">
            </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/shape_call"
                android:orientation="horizontal"
                android:id="@+id/btncall"
                android:layout_weight=".75"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_call_24"
                    android:tint="@color/white"
                    android:layout_height="50dp">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/shape_chat"
                android:orientation="horizontal"
                android:layout_weight=".75"
                android:id="@+id/btnsms"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_chat_bubble_24"
                    android:tint="@color/white"
                    android:layout_height="50dp">

                </ImageView>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>