<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appybuilder.alioffical.myolxtypeapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_lappicon_new"
        android:requestLegacyExternalStorage="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_lappicon_new"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"

        android:theme="@style/Theme.MyOlxTypeApp">
        <activity
            android:name=".Activitise.ShowItemDetailActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.ShowCategoryActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.UserRegisterActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Fab_Bottom_app_bar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ShowAllPosts.ShowAllPostActivity"
            android:exported="true" />
        <activity
            android:name=".Activitise.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>